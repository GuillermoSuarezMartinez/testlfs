<?xml version="1.0" encoding="utf-8" ?>
<otrazabilidad xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <loggers>
    <logger nombre="infowrapper" xsi:type="Wrapper">
      <logger nombre="infowrapperdebug" xsi:type="Debug" />
      <logger nombre="infowrapperremoting" xsi:type="Remoting" />
    </logger>
  </loggers>
  <propiedades>
    <path logger="infowrapperdebug" ruta="C:\prueba" fichero="debug" extension="log" />
    <backup logger="infowrapperdebug" ruta="C:\prueba\blog" subruta="Mes" bytes="1000000" />
    <timer logger="infowrapperdebug" hora="18:12:00" periodo="12h:0m:0s" />
    <remoting logger="infowrapperremoting" maquina="localhost" puerto="9999" alias="logger" />
  </propiedades>
</otrazabilidad>
